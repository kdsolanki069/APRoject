
@{
    ViewBag.Title = "CompanyDashboard";
    Layout = "~/Views/Shared/APAdminMasterPage.cshtml";

}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        <span class="cname"></span>
        <small>Company Dashboard</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Company Dashboard</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-md-4">

            <!-- Profile Image -->
            <div class="box box-primary">
                <div class="box-body box-profile">
                    <div class="text-center">
                        <span class="badge bg-light-blue center cshortname  img-circle" style="font-size:36px !important; "><span>66</span></span>
                    </div>
                    <h3 class="profile-username text-center"><span class="cname"></span></h3>



                    <ul class="list-group list-group-unbordered">
                        <li class="list-group-item">
                            <b>Contact Person Name :</b> <a id="ccontactname" class="pull-right"></a>
                        </li>
                        <li class="list-group-item">
                            <b>Phone No:</b> <a id="cphone" class="pull-right"></a>
                        </li>
                        <li class="list-group-item">
                            <b>Email: </b> <a id="cemail" class="pull-right"></a>
                        </li>
                    </ul>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
            <!-- About Me Box -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">About <span class="cname"></span></h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <strong><i class="fa fa-book margin-r-5"></i> GST Detail</strong>

                    <p class="text-muted" id="cgst">

                    </p>

                    <hr>

                    <strong><i class="fa fa-map-marker margin-r-5"></i> Location</strong>

                    <p class="text-muted"><span id="caddress"></span></p>

                    @*<hr>

                        <strong><i class="fa fa-pencil margin-r-5"></i> Skills</strong>

                        <p>
                            <span class="label label-danger">UI Design</span>
                            <span class="label label-success">Coding</span>
                            <span class="label label-info">Javascript</span>
                            <span class="label label-warning">PHP</span>
                            <span class="label label-primary">Node.js</span>
                        </p>

                        <hr>

                        <strong><i class="fa fa-file-text-o margin-r-5"></i> Notes</strong>

                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam fermentum enim neque.</p>*@
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <div class="col-md-8">
            <div class="col-lg-4 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-aqua">
                    <div class="inner">
                        <h3 id="lblQuatationCount"></h3>

                        <p>New Quatation</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-bag"></i>
                    </div>
                    <a href="/order/QuotationList" id="" class="small-box-footer lnkQuotation">More info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>

            <!-- ./col -->
            <div class="col-lg-4 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3 id="lblPerfomaCount"><sup style="font-size: 20px">%</sup></h3>

                        <p>New Perfoma</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                    <a href="/order/ProformaList" class="small-box-footer lnkProforma">More info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-4 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-yellow">
                    <div class="inner">
                        <h3 id="lblChallanCount"></h3>

                        <p>New Challan</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-add"></i>
                    </div>
                    <a href="/order/ChallanList" class="small-box-footer lnkChallan">More info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>


            <!-- ./col -->
            <div class="col-lg-6 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-red">
                    <div class="inner">
                        <h3 id="lblPOrderCount"></h3>

                        <p>New Purchase Order</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pie-graph"></i>
                    </div>
                    <a href="/PurchaseOrder/List" class="small-box-footer lnkPurchase">More info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-lg-6 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-red">
                    <div class="inner">
                        <h3 id="lblSOrderCount"></h3>

                        <p>New Sale Order</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pie-graph"></i>
                    </div>
                    <a href="/PurchaseOrder/SaleList" class="small-box-footer lnkSale">More info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Hover Data Table</h3>
                        </div>
                        <div class="box-body">
                            <table id="tblProductDetail" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>No </th>
                                        <th>Order Type</th>
                                        <th>Order No</th>
                                        <th>Product Detail</th>
                                        <th>Product Price</th>

                                    </tr>
                                </thead>
                                <tbody id="ProductData">
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>No </th>
                                        <th>Order Type</th>
                                        <th>Order No</th>
                                        <th>Product Detail</th>
                                        <th>Product Price</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                    <!-- /.col -->
                </div>
            </div>
        </div>
    </div>
    </div>
    <!-- /.row -->

</section>
