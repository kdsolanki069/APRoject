
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/APAdminMasterPage.cshtml";
}

    

        <section class="content-header">
            <h1>
                Work Book
                <small>Add Work Detail</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
                <li><a href="#"> Work Book</a></li>
                <li class="active">Add Work Detail</li>
            </ol>
        </section>


        <section class="content">
            <div class="row">
                <div class="col-xs-12">


                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">&nbsp; Add Work Detail</h3>

                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            
                                
                                    <div class="form-group">
                                        <label for="ddlcname">Client :</label>
                                        <select name="ddlcname" id="ddlcname" data-init-plugin="select2" class="form-control select2 requiredfield "></select>
                                    </div>
                                    <div class="form-group">
                                        <label for="txtworkdate">Date :</label>
                                        <input type="text" class="form-control datepickerdate requiredfield" id="txtworkdate" placeholder="Select Date" name="txtworkdate">
                                    </div>
                                    <div class="form-group">
                                        <label for="txtworkDescription">Work Description:</label>
                                        <textarea id="txtworkDescription" class="requiredfield" name="txtworkDescription" rows="5" cols="90" placeholder="Enter Work Description">
                                           
                    </textarea>
                                    </div>


                                    <div class="box-footer">

                                        <button type="button" class="btn btn-success" id="btnaddwork">Add Work Detail</button>
                                        <button type="submit" class="btn btn-default" style="margin-left:50px;">Cancel</button>
                                    </div>
                                    <!-- /.box-footer -->

                               

                            
                            <!-- /.box-body -->
                        </div>

                        <!-- /.box -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
                </div>
        </section>


        <script src="~/PageJS/WorkSheet/Add.js"></script>
