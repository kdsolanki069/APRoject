
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/APAdminMasterPage.cshtml";
}

<section class="content-header">
    <h1>
        Work Book
        <small>Edit Work Detail</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <li><a href="#"> Work Book</a></li>
        <li class="active">Edit Work Detail</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">


            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">&nbsp; Edit Work Detail</h3>

                </div>
                <!-- /.box-header -->
                <div class="box-body">
                  
                            <div class="form-group">
                                <label for="ddlcname">Client :</label>
                                <select name="ddlcname" id="ddlcname" data-init-plugin="select2" class="form-control select2 requiredfield col-md-12"></select>
                            </div>
                            <div class="form-group">
                                <label for="txtworkdate">Date :</label>
                                <input type="text" class="form-control datepickerdate requiredfield" id="txtworkdate" placeholder="Select Date" name="txtworkdate">
                            </div>
                            <div class="form-group">
                                <label for="ddlstatus">Status :</label>
                                <select name="ddlstatus" id="ddlstatus" data-init-plugin="select2" class="form-control select2  col-md-12 requiredfield">
                                    <option value="-1">Select Status</option>
                                    <option value="0">Pending</option>
                                    <option value="1">In Progress</option>
                                    <option value="2">Completed</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="txtworkDescription">Work Description:</label>
                                <textarea id="txtworkDescription" name="txtworkDescription" rows="5" cols="90" placeholder="Enter Work Description">
                                           
                    </textarea>
                            </div>
                            <div class="form-group">
                                <label for="txtworkRemark">Work Remark:</label>
                                <textarea id="txtworkRemark" name="txtworkDescription" rows="5" cols="90" placeholder="Enter Work Remark">
                                           
                    </textarea>
                            </div>
                            <input type="hidden" id="hdnworkid" value="10" />
                            <div class="box-footer">

                                <button type="button" class="btn btn-success" id="btneditwork">Edit Work Detail</button>
                                <button type="submit" class="btn btn-default" style="margin-left:50px;">Cancel</button>
                            </div>
                            <!-- /.box-footer -->

                      
                    <!-- /.box-body -->
                </div>

                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
</section>


<script src="~/PageJS/WorkSheet/Edit.js"></script>

